<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - Tellyt</title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="@Url.Content("~/Styles/Beta/main.css")" rel="stylesheet">
</head>
<body>
    <!--Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a href="#" class="navbar-brand">
                <img src="@Url.Content("~/images/Tellyt-logo.png")" border="0" alt="Tellyt" title="Tellyt">
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                @*<div class="navbar-nav">
                        <a href="#" class="nav-item nav-link active">Home</a>
                        <a href="#" class="nav-item nav-link">Start Your Life Interview</a>
                        <a href="#" class="nav-item nav-link">The Interviewer</a>
                        <a href="#" class="nav-item nav-link">Join the Beta</a>
                    </div>*@
                <div class="navbar-nav ms-auto">
                    <a href="#" class="nav-item nav-link" title="Login">Login</a>
                </div>
            </div>
        </div>
    </nav>
    <!-- Content Area -->
    <div class="content_area_ctn">
        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="container-fluid">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Tellyt Corporation</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
