<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - Tellyt</title>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="@Url.Content("~/Styles/v2/main.css")" rel="stylesheet">

    <link href="~/styles/v2/kendoui.2022.3.1109.core/kendo.common-bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/styles/v2/kendoui.2022.3.1109.core/kendo.bootstrap.min.css" rel="stylesheet" />*@
    @*<link href="~/styles/v2/kendoui.2022.3.1109.core/kendo.default.min.css" rel="stylesheet" />*@
    <link href="~/styles/v2/kendoui.2022.3.1109.core/tellyt.css" rel="stylesheet" />

    <script src="~/Scripts/v2/kendoui.2022.3.1109.core/kendo.ui.core.min.js"></script>
    <script src="~/Scripts/v2/kendo_init.js"></script>
    <script src="~/Scripts/v2/header.js"></script>
</head>
<body>
    <!--Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a href="/v2/Index" class="navbar-brand">
                <img src="@Url.Content("~/images/Tellyt-logo.png")" border="0" alt="Tellyt" title="Tellyt">
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="/v2/Dashboard" class="tlt_header_nav_item nav-link capitalize" data-tlt-name="Dashboard" title="Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a href="/v2/Search" class="tlt_header_nav_item nav-link capitalize" data-tlt-name="Search" title="Search">Search</a></li>
                    <li class="nav-item"><a href="/v2/AccountSettings" class="tlt_header_nav_item nav-link capitalize" data-tlt-name="AccountSettings" title="Account Settings">Account Settings</a></li>
                    <li class="nav-item"><a href="/v2/HelpCenter" class="tlt_header_nav_item nav-link capitalize" data-tlt-name="HelpCenter" title="Help Center">Help Center</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a href="#" class="nav-link capitalize" title="Log Off">Log Off</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Content Area -->
    <div class="content_area_ctn">
        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="container-fluid">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Tellyt Corporation</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
